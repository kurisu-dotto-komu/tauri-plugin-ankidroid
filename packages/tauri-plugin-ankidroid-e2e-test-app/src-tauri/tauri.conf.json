{
  "productName": "demo-app",
  "version": "0.1.0",
  "identifier": "com.tauri.ankidroid.demo",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AnkiDroid Plugin Demo",
        "width": 800,
        "height": 600,
        "label": "main"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "ankidroid-capabilities",
          "description": "AnkiDroid plugin capabilities",
          "permissions": [
            "ankidroid:allow-hello",
            "ankidroid:allow-list-cards",
            "ankidroid:allow-create-card",
            "ankidroid:allow-get-decks",
            "ankidroid:allow-update-card",
            "ankidroid:allow-delete-card"
          ],
          "windows": ["main"]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
