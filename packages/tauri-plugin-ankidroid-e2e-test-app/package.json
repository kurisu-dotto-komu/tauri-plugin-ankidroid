{
  "name": "tauri-plugin-ankidroid-e2e-test-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "android:dev": "NDK_HOME=/usr/local/lib/android/ndk/25.2.9519653 tauri android dev",
    "android:build": "tauri android build",
    "android:build:arm64": "NDK_HOME=/usr/local/lib/android/ndk/25.2.9519653 tauri android build --debug --target aarch64",
    "android:deploy": "NDK_HOME=/usr/local/lib/android/ndk/25.2.9519653 npm run build && NDK_HOME=/usr/local/lib/android/ndk/25.2.9519653 npm run android:build:arm64 && adb install -r src-tauri/gen/android/app/build/outputs/apk/universal/debug/app-universal-debug.apk && adb shell am force-stop com.tauri.ankidroid.demo && adb shell am start -n com.tauri.ankidroid.demo/.MainActivity",
    "clean": "rm -rf dist",
    "format": "prettier --log-level=error --write .",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "knip": "knip",
    "format-lint": "npm-run-all -s format lint",
    "quickfix": "npm-run-all -p format-lint typecheck knip",
    "appium:stop": "pkill -f appium || true",
    "test:cleanup": "adb shell am force-stop com.tauri.ankidroid.demo",
    "test:e2e:webview": "npm run test:cleanup && wdio run ./wdio.android.conf.js --spec tests/simple-webview-test.e2e.js",
    "test:e2e:create-card": "npm run test:cleanup && wdio run ./wdio.android.conf.js --spec tests/create-card-test.e2e.js",
    "test:e2e:error-handling": "npm run test:cleanup && wdio run ./wdio.android.conf.js --spec tests/error-handling-test.e2e.js"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tauri-plugin-ankidroid-js": "*"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@wdio/appium-service": "^9.19.1",
    "@wdio/cli": "^9.19.1",
    "@wdio/local-runner": "^9.19.1",
    "@wdio/mocha-framework": "^9.19.1",
    "@wdio/spec-reporter": "^9.19.1",
    "appium": "^3.0.0",
    "appium-uiautomator2-driver": "^4.2.9",
    "chai": "^5.2.1",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.0.0",
    "knip": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "webdriverio": "^9.19.1"
  }
}
