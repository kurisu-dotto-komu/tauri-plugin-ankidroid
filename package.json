{
  "name": "tauri-plugin-ankidroid-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --recursive --parallel build",
    "test": "pnpm --recursive test",
    "test:all": "cargo test --workspace && pnpm test",
    "lint": "pnpm --recursive lint",
    "format": "pnpm --recursive format",
    "clean": "pnpm --recursive clean && cargo clean",
    "dev": "pnpm --filter demo-app dev",
    "android:dev": "pnpm --filter demo-app android:dev",
    "emu:create": "bash scripts/emu-create-avd.sh",
    "emu:start": "bash scripts/emu-start.sh",
    "emu:stop": "bash scripts/emu-start.sh stop",
    "emu:install-anki": "bash scripts/emu-install-ankidroid.sh"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
