{
  "name": "tauri-plugin-ankidroid-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:all": "cargo test --workspace && npm test",
    "e2e": "npm run e2e --workspace=tauri-plugin-ankidroid-e2e-test-app",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "clean": "npm run clean --workspaces --if-present && cargo clean",
    "dev": "bash scripts/dev-hot-reload.sh",
    "dev:build": "bash scripts/dev-android.sh",
    "android:dev": "npm run android:dev --workspace=tauri-plugin-ankidroid-e2e-test-app",
    "android:deploy": "npm run android:deploy --workspace=tauri-plugin-ankidroid-e2e-test-app",
    "test:e2e": "npm run test:e2e --workspace=tauri-plugin-ankidroid-e2e-test-app",
    "emu:create": "bash scripts/emu-create-avd.sh",
    "emu:start": "bash scripts/emu-start.sh",
    "emu:stop": "bash scripts/emu-start.sh stop",
    "emu:install-anki": "bash scripts/emu-install-ankidroid.sh"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
